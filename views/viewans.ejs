<link rel="stylesheet" href="css/viewans.css">
<section>
    <!--for demo wrap-->
    <h1>Answers</h1>
    
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th>Register Number</th>
            <th>Subject</th>
            <th>Question1</th>
            <th>Question2</th>
            <th>Question3</th>
            <th>Question4</th>
            <th>Question5</th>
            </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
          <% user.forEach(function(user){ %>
          <tr>
            <td><%= user.Rgno%></td>
            <td><%= user.pid%></td>
            <td><%= user.ans1%></td>
            <td><%= user.ans2%></td>
            <td><%= user.ans3%></td>
            <td><%= user.ans4%></td>
            <td><%= user.ans5%></td>
           </tr>
           <% }); %>
          </tbody>
      </table>
    </div>
  </section>

  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Right Answers</th>
         
          </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% result.forEach(function(result){ %>
        <tr>
          <td><%= result.Roption%></td>
          
         </tr>
         <% }); %>
        </tbody>
    </table>
  </div>
</section>
<section>
  <link rel="stylesheet" href="css/viewans2.css">
<div class="container">  
<form id="contact" action="/addmark" method="POST">
  <h3>Add Mark</h3>
  <h4></h4>
  <fieldset>
    <input placeholder="Rgno" type="text" name="Rgno" tabindex="1" required autofocus>
  </fieldset>
  <fieldset>
    <input placeholder="Mark" name="mark" type="text" tabindex="2" required>
  </fieldset>
  <fieldset>
    <input placeholder="subject" name="sub" type="text" tabindex="2" required>
  </fieldset>
  <fieldset>
    <select name="catagory" id="">
      <option value="multiple">Select catagory</option>

      <option value="multiple">Multiple Choice</option>
    </select>
  </fieldset>
   <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
  </fieldset>
</form>
</div>
<body>
<script>
    // '.tbl-content' consumed little space for vertical scrollbar, scrollbar width depend on browser/os/platfrom. Here calculate the scollbar width .
$(window).on("load resize ", function() {
var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
$('.tbl-header').css({'padding-right':scrollWidth});
}).resize();
</script>
</body>
